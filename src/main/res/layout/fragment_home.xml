<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.payvenue.meterreader.MainActivity">

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/lblserial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:lines="2"
            android:text="Search Acct. ID / \n Meter Serial No.:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#A1A1A1" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/scanthumb" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/txtSearchSerial"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/my_border"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="right"
            android:inputType="textUri"
            android:maxLength="15"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#A1A1A1"
            android:textSize="28dp">

            <requestFocus />
        </EditText>
    </TableRow>

    <Button
        android:id="@+id/btnsearchserial"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/tableRow1"
        android:layout_marginTop="26dp"
        android:background="@drawable/button_border"
        android:text="SEARCH"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>