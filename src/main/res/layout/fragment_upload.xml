<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:columnCount="1"
            android:padding="10dp">

            <TextView
                android:id="@+id/pendingacctname"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="2"
                android:text="Read:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#A1A1A1" />

            <TextView
                android:id="@+id/txtreadcount"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="3"
                android:text="20"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#A1A1A1" />

            <TextView
                android:id="@+id/valNewReading"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="4"
                android:text="Unread:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#A1A1A1" />

            <TextView
                android:id="@+id/txtunreadcount"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="5"
                android:text="20"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#A1A1A1" />

            <TextView
                android:id="@+id/lbluploaded"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="6"
                android:text="Uploaded:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#A1A1A1" />

            <TextView
                android:id="@+id/valuploaded"
                android:layout_column="0"
                android:layout_gravity="right|center_vertical"
                android:layout_row="7"
                android:text="123123213213"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#A1A1A1" />

            <TextView
                android:id="@+id/vwid"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="8"
                android:text="MAC ADDRESS:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#A1A1A1" />

            <TextView
                android:id="@+id/txtmac"
                android:layout_column="0"
                android:layout_gravity="right|center_vertical"
                android:layout_row="9"
                android:text="123123213213"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#A1A1A1" />

            <TextView
                android:id="@+id/vwaddress"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_marginBottom="5dp"
                android:layout_row="10"
                android:text="HOST:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#A1A1A1" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnHost"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/my_border"
                android:entries="@array/array_hosts">

            </android.support.v7.widget.AppCompatSpinner>

            <!--<EditText-->
            <!--android:id="@+id/txtuphost"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_weight="5"-->
            <!--android:background="@drawable/my_border"-->
            <!--android:ems="10"-->
            <!--android:gravity="right"-->
            <!--android:inputType="textUri"-->
            <!--android:maxLength="100"-->
            <!--android:padding="10dp"-->
            <!--android:singleLine="true"-->
            <!--android:text="192.168.10.1"-->
            <!--android:textColor="#A1A1A1"-->
            <!--android:textSize="24dp">-->

            <!--<requestFocus />-->
            <!--</EditText>-->

            <TextView
                android:id="@+id/lblport"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_row="12"
                android:text="PORT:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#A1A1A1" />

            <EditText
                android:id="@+id/txtupPort"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="5"
                android:background="@drawable/my_border"
                android:ems="10"
                android:gravity="right"
                android:imeOptions="actionDone"
                android:inputType="textUri"
                android:maxLength="50"
                android:padding="10dp"
                android:singleLine="true"
                android:text="8080/noreco_api/billing_api.asp"
                android:textColor="#A1A1A1"
                android:textSize="24dp" />


            <Button
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="81dp"
                android:layout_row="18"
                android:background="@drawable/button_border"
                android:text="UPLOAD"
                android:textColor="#fff"
                android:textSize="30dp" />


            <Button
                android:id="@+id/btnResetUpload"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="20dp"
                android:layout_row="19"
                android:background="@drawable/button_border"
                android:text="Reset Upload"
                android:textColor="#fff"
                android:textSize="30dp" />


            <Button
                android:id="@+id/btnExtract"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:layout_row="20"
                android:background="@drawable/button_border"
                android:text="Export"
                android:textColor="#fff"
                android:textSize="30dp" />


        </GridLayout>
    </ScrollView>

</RelativeLayout>